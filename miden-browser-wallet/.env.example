# Zcash RPC Configuration
# Copy this file to .env.local and fill in your actual credentials
# NEVER commit .env.local to version control

# RPC Endpoint (required)
# For testnet: https://zcash-testnet.gateway.tatum.io/
# For mainnet: https://zcash-mainnet.gateway.tatum.io/
# For local node: http://localhost:18232 (testnet) or http://localhost:8232 (mainnet)
NEXT_PUBLIC_ZCASH_RPC_ENDPOINT=

# RPC API Key (required for Tatum and some other services)
# Get your API key from: https://tatum.io (for Tatum endpoints)
NEXT_PUBLIC_ZCASH_RPC_API_KEY=

# RPC Credentials (required for local nodes or endpoints using Basic Auth)
# For local zcashd node, set these in ~/.zcash/zcash.conf:
# rpcuser=your_username
# rpcpassword=your_password
NEXT_PUBLIC_ZCASH_RPC_USER=
NEXT_PUBLIC_ZCASH_RPC_PASSWORD=

# Server-side RPC Configuration (for backend proxy)
# These are used by the Next.js API route /api/zcash/rpc
# Only set these if using the backend proxy (NEXT_PUBLIC_USE_BACKEND_RPC_PROXY=true)
ZCASH_RPC_ENDPOINT=
ZCASH_RPC_API_KEY=
ZCASH_RPC_USER=
ZCASH_RPC_PASSWORD=

# Use Backend RPC Proxy (optional)
# Set to 'true' to use the Next.js API route instead of direct RPC calls
# This keeps API keys server-side and prevents exposure in browser bundle
NEXT_PUBLIC_USE_BACKEND_RPC_PROXY=false

# Delegated Proving Service (optional)
# URL for the Rust proving service if using delegated proof generation
# Default: http://localhost:8081
NEXT_PUBLIC_ZCASH_PROVING_SERVICE=http://localhost:8081

# Allow Network Mismatch (optional, for development only)
# Set to 'true' to allow testnet wallet with mainnet RPC (or vice versa)
# WARNING: Only use this for testing. Never use in production.
NEXT_PUBLIC_ALLOW_NETWORK_MISMATCH=false
